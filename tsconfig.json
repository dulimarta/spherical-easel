{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "importHelpers": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "ts-out",
    "types": ["vuetify", "jest", "@intlify/unplugin-vue-i18n/messages"],
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/vuetify/types",
      "@/types"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "**/__tests__/**", "**/tests/unit/**"],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
    // "tests/*.d.ts",
  ],
  "verbose": true,
  // "globals": {
  //   "ts-jest": {
  //     "diagnostics": false
  //   }
  // },
  "vueCompilerOptions": {
    "target": 3
  }
}
